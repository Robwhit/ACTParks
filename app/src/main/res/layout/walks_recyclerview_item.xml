<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walk_recycler"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom = "6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/walks_recycler_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recyclelist_cell_style"
            android:textColor="#f4f1eb"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/andika"/>
    </LinearLayout>
    <!--android:background="#6a6a2d"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/walks_recycler_distance_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/recyclelist_cell_style"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/andika"/>

        <TextView
            android:id="@+id/walks_distance_from_my_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/recyclelist_cell_style"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/andika"/>


    </LinearLayout>


</LinearLayout>